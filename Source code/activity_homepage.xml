<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020d22"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#1A1A2E"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        android:backgroundTint="#1A1A2E"
        android:layout_gravity="center"
        android:divider="?android:attr/dividerHorizontal"
        android:dividerPadding="8dp">

        <TextView
            android:text="Select Month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/monthSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#444444" />

        <TextView
            android:text="Electricity Units Used (kWh)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/unitsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#888888"
            android:inputType="numberDecimal"
            android:hint="Enter units"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF" />

        <TextView
            android:text="Rebate (%)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/rebateSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progressTint="#0d4fd3"
            android:thumbTint="#6192f5" />

        <TextView
            android:id="@+id/rebateValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rebate: 0%"
            android:textColor="#CCCCCC"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:layout_marginTop="16dp"
            android:backgroundTint="#0d4fd3"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/totalChargesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Charges: "
            android:textStyle="bold"
            android:textColor="#8a8fa6"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/finalCostText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Final Cost: "
            android:textStyle="bold"
            android:textColor="#4ac1ff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/viewHistoryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View History"
            android:layout_marginTop="24dp"
            android:backgroundTint="#0e51d8"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginTop="16dp"
            android:backgroundTint="#555555"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
